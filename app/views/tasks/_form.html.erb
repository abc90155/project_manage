<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :專案名稱, style: "display: block", class:"form-label"  %>
    <%= form.text_field :task_name, autofocus: true, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :專案管理者, style: "display: block", class:"form-label"  %>
    <%= form.text_field :owner , class: 'form-control'%>
  </div>

  <div class="mb-3">
    <%= form.label :院內合作, style: "display: block", class:"form-label"  %>
    <%= form.text_field :collaborate , class: 'form-control'%>
  </div>

  <div class="mb-3">
    <%= form.label :合作廠商, style: "display: block", class:"form-label"  %>
    <%= form.text_field :collaborate_company , class: 'form-control'%>
  </div>

  <div class="mb-3">
    <%= form.label :開案日期, style: "display: block", class:"form-label"  %>
    <%= form.date_field :start_date , class: 'form-control'%>
  </div>

  <div class="mb-3">
    <%= form.label :規劃與進度, style: "display: block" , class:"form-label" %>
    <%= form.rich_text_area  :weekly_report_item , class: 'form-control'%>
  </div>

  <div>
    <%=form.submit  :class => 'btn btn-outline-success'%>
  </div>
<% end %>
