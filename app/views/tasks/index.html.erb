<p style="color: green"><%= notice %></p>

<h1>專案管理</h1>

<div id="tasks">
  <% @tasks.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
    </p>
  <% end %>
</div>
<button type="button" class="btn btn-outline-warning"><%= link_to "New task", new_task_path %></button>
